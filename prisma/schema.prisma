generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Formulario {
  id                    String   @id @default(cuid())
  fechaEnvio           DateTime @default(now())
  
  // Información General
  nombreCompleto       String
  rolUnidad           String
  correoElectronico   String
  telefono            String
  horasDedicacion     Int
  tieneExperiencia    String
  unidadAcademica     String
  estrategia          String
  nivelSocializacion  String
  explicacionSocializacion String
  
  // Áreas de Conocimiento
  areasInvestigacion  String
  proyectoActual      String
  descripcionProyecto String
  tecnologiasUtilizadas String
  resultadosEsperados String
  
  // Transferencia e Innovación
  experienciaTransferencia String
  tipoTransferencia   String
  participacionInnovacion String
  colaboracionEmpresa String
  impactoComercial    String
  
  // Colaboración y Formación
  redesColaboracion   String
  proyectosConjuntos  String
  intercambioConocimiento String
  programasFormacion  String
  mentoriaEstudiantes String
  
  // Infraestructura y Emprendimiento
  infraestructura     String
  laboratoriosEquipos String
  apoyoEmprendimiento String
  startupsSpin        String
  capacitacionEmprendimiento String

  @@map("formularios")
}

